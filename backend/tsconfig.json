{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "downlevelIteration": true,
    // Has to be NodeNext to allow for required "with { type: 'json' }" syntax: https://stackoverflow.com/a/70106896
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["src/types/*/**", "./node_modules/@types"]
  },
  "include": ["src/**/*", "../lib/**/*"],
  "references": [
    {
      "path": "../lib"
    }
  ]
}
