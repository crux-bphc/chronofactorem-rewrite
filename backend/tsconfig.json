{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["src/types/*/**", "./node_modules/@types"]
  },
  "references": [
    {
      "path": "../lib"
    }
  ]
}
