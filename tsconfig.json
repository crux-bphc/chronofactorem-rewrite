{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["src/types/*/**", "./node_modules/@types"]
  }
}
